<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BeezyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BeezyApp"
    Shell.FlyoutBehavior="Disabled"
    Title="BeezyApp">

    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems" Route="tabs">
        <ShellContent
            Title="HomePage" Icon=""
            ContentTemplate="{DataTemplate views:HomePageView}"
            Route="HomePage" />

        <ShellContent
            Title="Profile" Icon=""
            ContentTemplate="{DataTemplate views:}"
            Route="Profile" />  

        <ShellContent IsVisible="{Binding IsManager}"
            Title="Report" Icon=""
            ContentTemplate="{DataTemplate views:ManagerReport}"
            Route="Report" />


    </FlyoutItem>
    <MenuItem Text="Logout" Command="{Binding LogoutCommand}" />

</Shell>
